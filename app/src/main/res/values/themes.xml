<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuizMint" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBarColor</item>

        <!-- Status bar item color. -->
        <item name="android:windowLightStatusBar">true</item>


    </style>

    <style name="Theme.QuizMint" parent="Base.Theme.QuizMint" />

    <style name="SoftCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/white</item>
    </style>


    <!--SearchView Style-->

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
        <item name="android:textColorHint">@color/searchViewHintColor</item>
    </style>

    <!-- Define a style for the SearchView hint text -->
    <style name="SearchViewHintStyle">
        <item name="android:textColorHint">@color/searchViewHintColor</item>
    </style>



</resources>